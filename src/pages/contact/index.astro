---
import Layout from "../../layout/layout.astro";
import { contact } from "../index.astro";
---

<Layout>
    <div class="w-full mt-5 lg:mt-20">
        <h1 class="text-2xl font-bold mx-auto mb-2 w-max">Get in Touch ðŸ”­</h1>
        <p class="text-center max-w-2xl mx-auto text- text-foreground/70">
            Have a question, feedback, or just want to say hello? We'd love to
            hear from you! Feel free to reach out using the contact information
            below, and we'll get back to you as soon as possible. ðŸ˜Ž
        </p>
        <div class="mx-auto w-full lg:w-max mt-5 grid grid-cols-2 lg:grid-cols-3 gap-2">
            {
                Object.keys(contact).map((link) => (
                    <a
                        href={contact[link].name}
                        class="flex lg:hover:text-foreground lg:hover:font-bold ease-in-out duration-200 lg:hover:scale-105 gap-3 p-4 bg-card rounded-lg border w-full text-sm last:items-center last:justify-center text-foreground/70 last:col-span-full"
                    >
                        <img
                            src={`/contact/${contact[link].icon}.svg`}
                            height={20}
                            width={20}
                        />
                        {contact[link].title}
                    </a>
                ))
            }
        </div>
    </div>
</Layout>
