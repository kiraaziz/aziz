---
import Layout from "../../layout/layout.astro"
import { Icon } from "astro-icon";
import stack from "./stack.json"

---

<Layout>
    <div style="z-index: 1" class="w-full h-full flex items-center flex-col">
        <div class="flex flex-col mx-auto w-full max-w-3xl py-10 space-y-12">
            {
                stack.map((val) => (
                    <div class="gap-3 w-full grid md:grid-cols-3 grid-cols-2 lg:grid-cols-4 px-5">
                        <div class="col-span-full">
                            <h1 class="font-bold text-xl md:text-3xl  text-white">
                                {val.name}
                            </h1>
                        </div>
                        {val.children.map((childVal) => (
                            <div class="w-full bg-gray-950 h-max p-4 backdrop-blur-md text-white col-span-1 gap-4 border rounded-xl border-purple-600 flex items-center justify-center flex-col text-white/80">
                                <Icon
                                    name={childVal.svg}
                                    size="50"
                                />
                                {childVal.name}
                            </div>
                        ))}
                    </div>
                ))
            }
        </div>
        <div class="h-10 w-full"></div>
    </div>
</Layout>
