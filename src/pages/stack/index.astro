---
import Layout from "../../layout/layout.astro";
import { Icon } from "astro-icon";
import stack from "./stack.json";
import { Button } from "@/components/ui/button";
---

<Layout>
    <div class="flex flex-col mx-auto w-full max-w-3xl py-10 space-y-12">
        {
            stack.map((val) => (
                <div class="gap-3 w-full grid md:grid-cols-3 grid-cols-2 lg:grid-cols-4 px-5">
                    <div class="col-span-full">
                        <h1 class="font-bold !text-lg md:text-2xl text-secondary bg-secondary/10 w-max px-10 py-2 rounded-full">
                            {val.name}
                        </h1>
                    </div>
                    {val.children.map((childVal) => (
                        <div class="border bg-card p-3 rounded-lg space-y-3">
                            <div class="w-full h-20 overflow-hidden flex items-center justify-center">
                                <img src={childVal.svg} class="h-16" />
                            </div>
                            <Button className="w-full text-primary bg-primary/10 hover:text-background">
                                {childVal.name}
                            </Button>
                        </div>
                    ))}
                </div>
            ))
        }
    </div>
    <div class="h-10 w-full"></div>
</Layout>
