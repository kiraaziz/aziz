---
import Layout from "../../layout/layout.astro";
import { Button } from "./../../components/ui/button";
import { Textarea } from "./../../components/ui/textarea";
import { Input } from "./../../components/ui/input";
import { Send } from "lucide-react";
import Price from "@/components/static/Price.astro";
---

<Layout>
    <div class="w-full mt-5 lg:mt-16 max-w-3xl mx-auto">
        <Price />
        <form
            class="w-full mx-auto grid grid-cols-1 lg:grid-cols-2 py-1 flex-col gap-3 mt-7 lg:mt-20"
            action="https://usebasin.com/f/e5127a235c57"
            method="POST"
        >
            <div class="">
                <label>Client name</label>
                <Input
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    name="name"
                    placeholder="Name"
                />
            </div>
            <div class="">
                <label>Email</label>
                <Input
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    name="email"
                    placeholder="Email"
                />
            </div>
            <div class="">
                <label>Phone number</label>
                <Input
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    name="phone"
                    placeholder="Phone"
                />
            </div>
            <div class="">
                <label>Service price</label>
                <Input
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    type="number"
                    min="0"
                    name="price"
                    placeholder="price"
                />
            </div>
            <div class="">
                <label>Work duration</label>
                <Input
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    name="duration"
                    placeholder="duration days"
                />
            </div>
            <div class="col-span-full">
                <label>Details</label>
                <Textarea
                    className="bg-card/20 backdrop-blur"
                    required={true}
                    name="details"
                    placeholder="more information about the request"
                />
            </div>
            <div class="col-span-full flex items-center justify-end">
                <Button
                    type="submit"
                    variant="default"
                    className="gap-4 px-8 text-primary bg-primary/10 hover:text-primary hover:bg-primary/10 lg:hover:gap-6 ease-in-out duration-200 transition-all "
                >
                    Send
                    <Send size={20} />
                </Button>
            </div>
        </form>
    </div>
</Layout>
