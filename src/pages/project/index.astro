---
import Layout from "../../layout/layout.astro";
import project from "./project.json";
---

<Layout>
    <div
        style="z-index: 1"
        class="w-full h-full flex items-center flex-col"
    >
        <div
            class="gap-4 w-full grid md:grid-cols-2 grid-cols-1 2xl:grid-cols-3 max-w-6xl py-7 px-3"
        >
            {
                project.map((val, i) => (
                    <div class="w-full h-full p-4 bg-gray-950 text-white col-span-1 gap-4 border rounded-xl border-purple-600 flex items-center justify-center flex-col text-white/80 z-20">
                        <div class="w-max max-w-full mx-auto h-max flex gap-2 overflow-x-auto">
                            {val.images.slice(0, 2).map((img) => (
                                <img
                                    src={img}
                                    class=" max-h-60 rounded-lg object-cover border mb-1 border-purple-600"
                                />
                            ))}
                        </div>
                        <div class="p-2 w-full flex-1">
                            <h1 class="text-xl font-semibold text-white">
                                {val.name}
                            </h1>
                            <div class="w-full flex flex-wrap gap-1">
                                {val.tags
                                    .split(" ")
                                    .slice(0, 2)
                                    .map((tag) => (
                                        <button class="border border-purple-600 rounded-full text-sm   px-3 py-1">
                                            {tag}
                                        </button>
                                    ))}
                                {val.tags.split(" ").length > 2 && (
                                    <button class="border border-purple-600 rounded-full text-sm   px-3 py-1 flex items-center justify-center">
                                        . . .
                                    </button>
                                )}
                            </div>
                            <div class="w-full h-4" />
                            <a  style="line-break: anywhere;"
                                href={val.url}
                                class="underline text-purple-600 decoration-purple-600 mt-auto  break-before-all"
                            >
                                {val.url}
                            </a>
                            <p class="text-sm font-light text-white/70">
                                {val.description.slice(0, 150)}{val.description.length > 150 && "..."}
                            </p>
                            <div class="flex items-center justify-end">
                                <a
                                    href={`/project/${i}`}
                                    class="bg-purple-600 px-3 py-2 mt-4 rounded-md"
                                >
                                    Read more
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
        <div class="h-10 w-full"></div>
    </div>
</Layout>
