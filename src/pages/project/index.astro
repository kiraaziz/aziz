---
import Layout from "../../layout/layout.astro"
import { Icon } from "astro-icon";
import project from "./project.json";
---

<Layout>
    <div style="z-index: 1" class="w-full h-full flex items-center flex-col">
        <div
            class="gap-3 w-full grid md:grid-cols-2 grid-cols-1 lg:grid-cols-3 max-w-6xl py-7 px-3"
        >
            {
                project.map((val) => (
                    <div class="w-full h-full p-4 backdrop-blur-md text-white col-span-1 gap-4 border rounded-xl border-purple-600 flex items-center justify-center flex-col text-white/80 z-20">
                        <div class="w-max max-w-full mx-auto h-max flex gap-2 overflow-x-auto">
                            {val.images.map((img) => (
                                <img
                                    src={img}
                                    class=" max-h-60 rounded-lg object-cover"
                                />
                            ))}
                        </div>
                        <div class="p-2 w-full flex-1">
                            <h1 class="text-xl font-semibold text-white">
                                {val.name}
                            </h1>
                            <div class="w-full flex flex-wrap gap-1">
                                {val.tags.split(" ").map((tag) => (
                                    <button class="border border-purple-600 rounded-full text-sm   px-3 py-1">
                                        {tag}
                                    </button>
                                ))}
                            </div>
                            <div class="w-full h-4" />
                            <a
                                href={val.url}
                                class="underline text-purple-600 decoration-purple-600 mt-auto "
                            >
                                {val.url}
                            </a>
                            <p class="text-sm font-light">{val.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
        <div class="h-10 w-full"></div>
    </div>
</Layout>
