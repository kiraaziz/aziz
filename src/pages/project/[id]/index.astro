---
import Layout from "../../../layout/layout.astro";
import project from "./../project.json";

const { id } = Astro.params;
const page = project.find((page, i) => i == (id as any));
if (!page) return Astro.redirect("/404");
const data = page;
import { Content as md } from "../md/1.md";
---

<Layout>
    <div class="w-full flex items-center justify-center flex-col lg:flex-row">
        <img src={data.images[0]} class="lg:h-96" />
        <div
            class="p-1 space-x-1 lg:space-x-0 lg:p-0 w-full lg:w-2/5 flex flex-row lg:flex-col h-36 lg:h-96 overflow-auto pr-1 mr-3"
        >
            {data.images.map((i) => <img src={i} class="w-full shadow" />)}
        </div>
    </div>
    <div class="py-8 px-3 w-full max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-purple-500 tracking-widest">
            {data.name}
        </h1>
        <div class="w-full flex flex-wrap gap-1 mt-2 mb-4">
            {
                data.tags
                    .split(" ")
                    .map((tag) => (
                        <button class="border border-purple-600 rounded-full text-sm   px-3 py-1 !text-white">
                            {tag}
                        </button>
                    ))
            }
        </div>
        <p class="text-white my-2 text-white/70 font-light">
            {data.description}
        </p>
        {
            data.md && (
                <div class="w-full mx-auto max-w-2xl border-b-4 border-purple-500 mb-8 mt-5" />
            )
        }
        {data.md && <div class="text-white">
                <slot />
            </div>}
    </div>
</Layout>
