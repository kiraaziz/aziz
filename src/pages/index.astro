---
import Layout from '../layout/layout.astro'
import About from '@/components/static/v2/About.astro'
import TopProjects from '@/components/static/v2/TopProjects.astro'
import Stack from '@/components/static/v2/CurrentTech.astro'
import Experiance from '@/components/static/v2/Experience.astro'
import Epic from '@/components/static/v2/Epic.astro'
import ExperienceDetail from '@/components/static/v2/ExperienceDetail.astro'
import DesignSystem from '@/components/static/v2/DesignSystem.astro'
import { Github } from '@/components/Github'
---

<Layout>
  <div class="w-full lg:p-5 max-w-4xl mx-auto to-start-animation">
    <About />
  </div>
  <div class="w-full max-w-6xl mx-auto mt-14 lg:mt-20 mb-10">
    <div class="w-full grid grid-cols-1 lg:grid-cols-3 gap-5 to-start-animation">
      <Github  client:load />
      <div class="lg:order-1 order-3 l:gborder lg:mt-0 mt-14 lg:px-10 hidden lg:flex items-center justify-center rounded-xl border to-start-animation">
        <Stack />
      </div>
      <div class="lg:order-1 order-4 mt-8 lg:mt-0 col-span-full lg:border lg:col-span-1 rounded-xl border hidden lg:flex to-start-animation">
        <Experiance />
      </div>
      <div class="lg:order-1 order-2 lg:border mt-14 lg:mt-0 lg:p-5 relative overflow-hidden col-span-2 rounded-xl border hidden lg:flex to-start-animation">
        <TopProjects />
      </div>
    </div>
  </div>
  <Epic />
  <DesignSystem /> 
    <ExperienceDetail /> 
</Layout>
