---
import { Icon } from "astro-icon";
const primar = [
    { name: "React", icon: "logos:react" },
    { name: "Tailwind", icon: "logos:tailwindcss-icon" },
    { name: "Next", icon: "logos:nextjs" },
    { name: "Postgresql", icon: "logos:postgresql" },
    { name: "Prisma", icon: "simple-icons:prisma" },
    { name: "firebase", icon: "logos:electron" },
    { name: "firebase", icon: "logos:firebase" },
];
---

<div class="w-full m-auto">
    <div class="mb-3 -space-y-2">
        <h1 class="text-lg lg:text-xl font-bold">Current Tech Stack</h1>
    </div>
    <div class="w-full flex flex-wrap gap-2">
        {
            primar.map((p) => (
                <div class="flex items-center justify-center rounded-full ease-in-out duration-200 lg:hover:-translate-y-2 lg:hover:scale-110 lg:hover:cursor-pointer">
                    <div class="p-3 border flex items-center justify-center rounded bg-muted/30 backdrop-blur">
                        <Icon name={p.icon} size="35" fill="white" />
                    </div>
                </div>
            ))
        }
    </div>
</div>
