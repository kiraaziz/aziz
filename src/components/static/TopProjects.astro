---
import { Button } from "@/components/ui/button";
import project from "@/lib/json/project.json";
import { useHalfText } from "@/pages/index.astro";
import { Icon } from "astro-icon";
import { ChevronLeft, ChevronRight, Compass } from "lucide-react";

export const sortedProjects = [...project].sort((a: any, b: any) => {
    const priorityA = a.priority !== undefined ? a.priority : Infinity;
    const priorityB = b.priority !== undefined ? b.priority : Infinity;
    return priorityA - priorityB;
});
---

<div class="w-full mt-5 lg:mt-20">
    <div class="flex items-center justify-between w-full mt-5 lg:mt-10">
        <h1 class="text-xl font-bold">Top apps</h1>
        <a
            class="text-sm font-light text-foreground/60 gap-2 transition-all ease-in-out duration-200 lg:hover:gap-5 flex items-center justify-center"
            href="/project"
        >
            Read more
            <Icon name="lucide:arrow-right" size="20" />
        </a>
    </div>
    <div class="mt-4 grid grid-cols-1 lg:grid-cols-2 gap-2">
        {
            sortedProjects.map(
                (p, index) =>
                    p.logo && (
                        <a
                            class="bg-muted/40 border w-full rounded h-full overflow-hidden relative"
                            href={`project/${index}`}
                        >
                            <div class="w-full mb-4 border-b overflow-hidden flex items-center justify-center">
                                {p.images.map(
                                    (i, index) =>
                                        index === 0 && (
                                            <img
                                                src={i.replace(
                                                    "upload",
                                                    "upload/w_500",
                                                )}
                                                class="lg:hover:scale-110 ease-in-out duration-200 w-full bg-background h-40 object-left-top object-cover"
                                            />
                                        ),
                                )}
                            </div>
                            <div class="px-5 gap-1 flex w-max items-center justify-center">
                                <img
                                    src={`/svg/${p.logo}`}
                                    class={`${p.logo.includes("png") ? "h-7 -translate-y-0.5 " : "h-8"} `}
                                />
                                <h1 class="font-bold mr-2 ml-1">{p.name}</h1>
                                <div class="max-w-full w-max flex flex-wrap gap-1">
                                    {p.tags
                                        .split(" ")
                                        .slice(0, 3)
                                        .map((t) => (
                                            <div class="w-max text-xs bg-muted px-2 py-0.5 rounded-full text-foreground/50 m-auto">
                                                {t}
                                            </div>
                                        ))}
                                </div>
                            </div>
                            <p class="mt-2 text-sm px-5 mb-3 font-light text-foreground/70">
                                {useHalfText(p.description, 85)}
                            </p>
                            <div class="w-full p-2">
                                <Button
                                    variant="outline"
                                    className="w-full gap-2 bg-muted border-none text-muted-foreground"
                                >
                                    <Compass size={18} />
                                    Explore
                                </Button>
                            </div>
                        </a>
                    ),
            )
        }
    </div>
</div>
