---
import { Icon } from "astro-icon";
import "./../styles/index.css";

const { pathname } = Astro.url;

const paths = [
	{ name: "Home", to: "/", icon: "mdi:home" },
	{ name: "Stack", to: "/stack", icon: "mdi:react" },
	{ name: "Projects", to: "/project", icon: "mdi:github" },
	{ name: "Blog", to: "/blog", icon: "mdi:blog" },
	{ name: "Contact", to: "/contact", icon: "mdi:gmail" },
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta
			name="google-site-verification"
			content="XrMtRnC_cvsvQFEGE5FMyzEZOuCtjfMyDScEvfJz6rU"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
		/>
		<title>Kira Aziz {pathname.split("/")[1] && ": " + pathname.split("/")[1]}</title>
	</head>
	<body class="h-[100svh] overflow-x-hidden w-screen p-0 m-0 bg-black/95 flex flex-col">
		<div
			class="w-full px-8 py-7 shadow-2xll bg-gray-950 flex items-center z-10 border-b-[0.005px] border-gray-800 justify-center"
		>
			<div
				class="w-full h-full max-w-5xl flex justify-between items-center text-white"
			>
				<h1
					class="text-xl font-extrabold md:flex hidden items-center justify-center gap-3"
				>
					<Icon
						name="ph:terminal-bold"
						size="30"
						class="text-purple-600"
					/>
					Kira Aziz
				</h1>
				<div class="flex gap-2.5 lg:mx-0 mx-auto ">
					{
						paths.map((p) => (
							<a
								href={p.to}
								class={`${p.to === pathname ? " font-bold bg-purple-600/30 rounded-full tracking-wide  !text-white/80": "opacity-70"} px-4 py-1.5  ease-in-out duration-200 flex items-center justify-center gap-2 text-sm`}
							>
								<Icon
									name={p.icon}
									size="22"
									class={`${p.to !== pathname && "text-purple-600"}`}
								/>
								<p class="lg:block hidden">{p.name}</p>
							</a>
						))
					}
				</div>
			</div>
		</div>
		<div class="layout relative w-full flex-1 bg-gray-900 overflow-auto overflow-x-hidden">
			<div
				style="z-index: 0"
				class="shBox fixed top-20 left-20 hidden md:block ease-in-out duration-200"
			>
			</div>
			<div
				style="z-index: 0"
				class="shBox2 fixed bottom-20 right-20 hidden md:block ease-in-out duration-200"
			>
			</div>
			<slot />
		</div>
	</body>
</html>
